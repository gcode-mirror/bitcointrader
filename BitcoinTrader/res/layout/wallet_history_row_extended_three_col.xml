<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
>
  
  <TextView
    android:id="@+id/wallet_history_row_type"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/list_entry_padding_horizontal"
    android:gravity="center_vertical"
    android:textStyle="bold"
    android:textSize="@dimen/font_size_xlarge" />
  
  <RelativeLayout
    android:layout_width="0dp"
    android:layout_weight="2"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/list_entry_padding_horizontal"
  >
    <TextView
      android:id="@+id/wallet_history_amount_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="@dimen/list_entry_padding_horizontal"
      android:text="@string/wallet_history_amount"
    />
  
    <de.dev.eth0.bitcointrader.ui.views.CurrencyTextView
      android:id="@+id/wallet_history_row_amount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/wallet_history_amount_label"
    />
  
    <TextView
      android:id="@+id/wallet_history_balance_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@id/wallet_history_amount_label"
      android:layout_below="@id/wallet_history_amount_label"
      android:text="@string/wallet_history_balance"
    />
    <de.dev.eth0.bitcointrader.ui.views.CurrencyTextView
      android:id="@+id/wallet_history_row_balance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/wallet_history_row_amount"
      android:layout_alignLeft="@id/wallet_history_row_amount"
    />
  
    <TextView
      android:id="@+id/wallet_history_row_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/list_entry_padding_horizontal"
      android:layout_toRightOf="@id/wallet_history_row_amount"
    />
    
  </RelativeLayout>
</LinearLayout>